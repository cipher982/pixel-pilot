FROM python:3.12-slim

# Install minimal X11
RUN apt-get update && apt-get install -y \
    xvfb \
    x11-apps \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# Add additional package without rebuilding previous layer
RUN apt-get update && apt-get install -y x11-utils && rm -rf /var/lib/apt/lists/*

# Test script
COPY eval/docker/test-x11.sh /test-x11.sh
RUN chmod +x /test-x11.sh

CMD ["/test-x11.sh"] 